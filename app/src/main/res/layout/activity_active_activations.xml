<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.activationsActivity.ActiveActivations">

    <TextView
        android:id="@+id/balance"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Balens"
        android:gravity="center"
        android:textColor="@color/colorBlack"
        android:background="@color/colorCreamWhite"
        />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView_a_a"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/balance"
        app:layout_constraintBottom_toTopOf="@+id/layout_compat"/>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/layout_compat"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:gravity="center">


        <ImageButton
            android:id="@+id/accept_button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/round_style"
            android:src="@drawable/ic_done"
            android:layout_marginEnd="5dp" />

        <ImageButton
            android:id="@+id/cancel_button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/round_style"
            android:src="@drawable/ic_cancel"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp" />

        <ImageButton
            android:id="@+id/reset_button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/round_style"
            android:src="@drawable/ic_refresh"
            android:layout_marginStart="5dp" />
    </androidx.appcompat.widget.LinearLayoutCompat>


</androidx.constraintlayout.widget.ConstraintLayout>